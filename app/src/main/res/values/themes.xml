<resources>
    <!-- Base application theme. -->
    <style name="Theme.Motivation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mine_shaft</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="helloBackgroundColor">@color/white</item>
        <item name="helloTextColor">@color/mine_shaft</item>

        <item name="helloButtonBackgroundColor">@color/mine_shaft</item>
        <item name="helloButtonTextColor">@color/alabaster</item>

        <item name="settingsContainerBackgroundColor">@color/alabaster</item>
        <item name="settingButtonStrokeColor">@color/mine_shaft</item>
        <item name="settingButtonBackgroundColor">@color/alabaster</item>

        <item name="themePickerButtonSelectedColor">@color/mine_shaft</item>
        <item name="themePickerButtonUnselectedColor">@color/iron</item>

        <item name="motivationBackgroundColor">@color/cod_gray</item>
        <item name="motivationBackgroundColorSecond">@color/cod_gray</item>
        <item name="motivationBackgroundColorThird">@color/cod_gray</item>
        <item name="motivationTextColor">@color/alabaster</item>
        <item name="favoriteColor">@color/alabaster</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="LightMode" parent="Theme.Motivation">
        <item name="motivationBackgroundColor">@color/alabaster</item>
        <item name="motivationBackgroundColorSecond">@color/alabaster</item>
        <item name="motivationBackgroundColorThird">@color/alabaster</item>
        <item name="motivationTextColor">@color/cod_gray</item>
        <item name="favoriteColor">@color/cod_gray</item>
    </style>

    <style name="BlueMode" parent="Theme.Motivation">
        <item name="helloBackgroundColor">@color/denim</item>
        <item name="motivationBackgroundColor">@color/denim</item>
        <item name="motivationBackgroundColorSecond">@color/denim</item>
        <item name="motivationBackgroundColorThird">@color/denim</item>
    </style>

    <style name="MixMode" parent="Theme.Motivation">
        <item name="helloBackgroundColor">@color/amaranth</item>
        <item name="motivationBackgroundColor">@color/coral_red</item>
        <item name="motivationBackgroundColorSecond">@color/amaranth</item>
        <item name="motivationBackgroundColorThird">@color/seance</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/mine_shaft</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeOverlay.Motivation.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/mine_shaft</item>
        <item name="appWidgetTextColor">@color/iron</item>
    </style>

</resources>