<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Motivation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mine_shaft</item>
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="SettingsButtonsTheme" parent="Theme.Motivation">
        <item name="colorPrimary">@color/alabaster</item>
        <item name="colorOnPrimary">@color/mine_shaft</item>
    </style>

    <style name="ThemeButtonsTheme" parent="Theme.Motivation">
        <item name="colorPrimary">@color/iron</item>
        <item name="colorOnPrimary">@color/mine_shaft</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/mine_shaft</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeOverlay.Motivation.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/mine_shaft</item>
        <item name="appWidgetTextColor">@color/iron</item>
    </style>

</resources>