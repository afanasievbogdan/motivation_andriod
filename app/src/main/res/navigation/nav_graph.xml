<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/helloFragment"
        android:name="com.bogdan.motivation.ui.fragments.hello.HelloFragment"
        android:label="fragment_hello"
        tools:layout="@layout/fragment_hello">
        <action
            android:id="@+id/action_helloFragment_to_youFragment"
            app:destination="@id/youFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:exitAnim="@anim/anim_exit_slide_left"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/notificationSettingsFragment"
        android:name="com.bogdan.motivation.ui.fragments.notificationsettings.NotificationSettingsFragment"
        android:label="fragment_notification_settings"
        tools:layout="@layout/fragment_notification_settings">
        <action
            android:id="@+id/action_notificationSettingsFragment_to_themePickerFragment"
            app:destination="@id/themePickerFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:exitAnim="@anim/anim_exit_slide_left"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.bogdan.motivation.ui.fragments.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_helloFragment"
            app:destination="@id/helloFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_motivationFragment"
            app:destination="@id/motivationFragment"
            app:popUpTo="@id/nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/motivationFragment"
        android:name="com.bogdan.motivation.ui.fragments.motivation.MotivationFragment"
        android:label="fragment_motivation"
        tools:layout="@layout/fragment_motivation">
        <action
            android:id="@+id/action_motivationFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@anim/anim_enter_slide_right"
            app:exitAnim="@anim/anim_exit_slide_right"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/anim_enter_slide_left"
            app:popExitAnim="@anim/anim_exit_slide_left"
            app:popUpTo="@id/motivationFragment" />
        <argument
            android:name="btn_categories_text"
            app:argType="string" />
        <action
            android:id="@+id/action_motivationFragment_to_themeEditorFragment"
            app:destination="@id/themeEditorFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:exitAnim="@anim/anim_exit_slide_left"
            app:popEnterAnim="@anim/anim_enter_slide_right"
            app:popExitAnim="@anim/anim_exit_slide_right"
            app:popUpTo="@id/motivationFragment" />
        <action
            android:id="@+id/action_motivationFragment_to_accountFragment"
            app:destination="@id/accountFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:exitAnim="@anim/anim_exit_slide_left"
            app:popEnterAnim="@anim/anim_enter_slide_right"
            app:popExitAnim="@anim/anim_exit_slide_right"
            app:popUpTo="@id/motivationFragment" />
        <action
            android:id="@+id/action_motivationFragment_to_commentsFragment"
            app:destination="@id/commentsFragment"
            app:enterAnim="@anim/anim_enter_slide_up"
            app:exitAnim="@anim/anim_exit_slide_up"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/anim_enter_slide_down"
            app:popExitAnim="@anim/anim_exit_slide_down"
            app:popUpTo="@id/motivationFragment" />
    </fragment>
    <fragment
        android:id="@+id/themePickerFragment"
        android:name="com.bogdan.motivation.ui.fragments.themepicker.CategoriesPickerFragment"
        android:label="fragment_theme_picker"
        tools:layout="@layout/fragment_categories_picker">
        <action
            android:id="@+id/action_themePickerFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.bogdan.motivation.ui.fragments.categories.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_motivationFragment"
            app:destination="@id/motivationFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:popUpTo="@id/nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/themeEditorFragment"
        android:name="com.bogdan.motivation.ui.fragments.styleeditor.StyleEditorFragment"
        android:label="fragment_theme_editor"
        tools:layout="@layout/fragment_style_editor">
        <argument
            android:name="btn_categories_text"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.bogdan.motivation.ui.fragments.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_accountFragment_to_aboutMeFragment"
            app:destination="@id/aboutMeFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:exitAnim="@anim/anim_exit_slide_left"
            app:popEnterAnim="@anim/anim_enter_slide_right"
            app:popExitAnim="@anim/anim_exit_slide_right"
            app:popUpTo="@id/accountFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.bogdan.motivation.ui.fragments.comments.CommentsFragment"
        android:label="CommentsFragment" >
        <argument
            android:name="quote"
            app:argType="com.bogdan.motivation.data.entities.local.Quote" />
    </fragment>
    <fragment
        android:id="@+id/youFragment"
        android:name="com.bogdan.motivation.ui.fragments.you.YouFragment"
        android:label="YouFragment" >
        <action
            android:id="@+id/action_youFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment"
            app:enterAnim="@anim/anim_enter_slide_left"
            app:exitAnim="@anim/anim_exit_slide_left"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/aboutMeFragment"
        android:name="com.bogdan.motivation.ui.fragments.aboutme.AboutMeFragment"
        android:label="fragment_about_me"
        tools:layout="@layout/fragment_about_me" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="desc"
            app:argType="string" />
        <argument
            android:name="user"
            app:argType="com.bogdan.motivation.data.entities.local.User"
            app:nullable="true" />
        <argument
            android:name="comments"
            app:argType="com.bogdan.motivation.data.entities.local.CommentsList"
            app:nullable="true" />
        <argument
            android:name="quotes"
            app:argType="com.bogdan.motivation.data.entities.local.FavQuotesList"
            app:nullable="true" />
    </fragment>
</navigation>