<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ThemePickerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThemeView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:scaleType="centerCrop"
            android:contentDescription="@string/next"
            app:srcCompat="@drawable/photo_themes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvThemeExplanations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cynthonextregular"
            android:text="@string/theme_explanation_theme"
            android:textAlignment="center"
            android:textColor="@color/mine_shaft"
            android:textSize="18sp" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/gripLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="8.2"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_letting_go"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_letting_go"
                    android:textColor="@color/mine_shaft" />

                <TextView
                    android:id="@+id/tv_faith_spirituality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_faith_spirituality"
                    android:textColor="@color/mine_shaft" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_happiness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_happiness"
                    android:textColor="@color/mine_shaft" />

                <TextView
                    android:id="@+id/tv_stress_anxiety"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_stress_anxiety"
                    android:textColor="@color/mine_shaft" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_physical_health"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_physical_health"
                    android:textColor="@color/mine_shaft" />

                <TextView
                    android:id="@+id/tv_achieving_goals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_achieving_goals"
                    android:textColor="@color/mine_shaft" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_self_esteem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_self_esteem"
                    android:textColor="@color/mine_shaft" />

                <TextView
                    android:id="@+id/tv_relationships"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_theme"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:onClick="themeSettingsOnClick"
                    android:paddingVertical="15sp"
                    android:text="@string/theme_relationships"
                    android:textColor="@color/mine_shaft" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnContinue2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/btn_submit"
                android:fontFamily="@font/cynthonext"
                android:onClick="onBntContinue2Clicked"
                android:text="@string/settings_btn_continue"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>