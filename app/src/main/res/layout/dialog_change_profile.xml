<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_popup"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_your_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cynthonext"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Твое имя :"
        android:textColor="@color/cod_gray" />

    <EditText
        android:id="@+id/ti_your_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_your_age"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cynthonext"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Твой возраст :"
        android:textColor="@color/cod_gray" />

    <EditText
        android:id="@+id/ti_your_age"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="2" />

    <TextView
        android:id="@+id/tv_your_sex"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cynthonext"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Твой пол :"
        android:textColor="@color/cod_gray" />

    <Spinner
        android:id="@+id/spinner_your_sex"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_your_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cynthonext"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Твой логин :"
        android:textColor="@color/cod_gray" />

    <EditText
        android:id="@+id/ti_your_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_your_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cynthonext"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Твой пароль: "
        android:textColor="@color/cod_gray" />

    <EditText
        android:id="@+id/ti_your_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_save_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_submit"
        android:gravity="center"
        android:text="Сохранить !"
        android:textAllCaps="false" />

</LinearLayout>