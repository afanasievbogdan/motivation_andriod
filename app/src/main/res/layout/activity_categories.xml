<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriesActivity"
    android:paddingVertical="100dp"
    android:paddingHorizontal="15dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/cynthonextregular"
        android:textColor="@color/black"
        android:text="Categories" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_general_chose"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:layout_marginTop="5dp"
            app:iconPadding="0dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/theme_btn"
            app:backgroundTint="@color/medium_grey"
            android:textColor="@color/dark_grey"
            android:textAllCaps="false"
            android:fontFamily="@font/cynthonext"
            android:text="General"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite_chose"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:layout_marginTop="5dp"
            app:iconPadding="0dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/theme_btn"
            app:backgroundTint="@color/medium_grey"
            android:textColor="@color/dark_grey"
            android:textAllCaps="false"
            android:fontFamily="@font/cynthonext"
            android:text="Favorites" />

    </LinearLayout>
</LinearLayout>