<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgNotifView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:scaleType="centerCrop"
            android:contentDescription="@string/next"
            app:srcCompat="@drawable/photo_notifications" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNotifExplanations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/cynthonextregular"
                android:text="@string/tv_explanation_notif"
                android:textAlignment="center"
                android:textColor="@color/black_grey"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/horizontalLayout1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/settings_background"
                android:paddingStart="20dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_grey"
                    android:fontFamily="@font/cynthonext"
                    android:textSize="16sp"

                    android:layout_gravity="center"
                    android:text="@string/tv_how_many" />


                <TextView
                    android:id="@+id/btn_minus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/settings_btn"
                    android:fontFamily="@font/cynthonext"
                    android:onClick="onBtnMinusClicked"
                    android:text="@string/btn_minus"
                    android:textColor="@color/black_grey"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:theme="@style/SettingsButtonsTheme"
                    />
                <TextView
                    android:id="@+id/notif_quantity"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_grey"
                    android:fontFamily="@font/cynthonext"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tv_quantity_default" />

                <TextView
                    android:id="@+id/btn_plus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/settings_btn"
                    android:fontFamily="@font/cynthonext"
                    android:onClick="onBtnPlusClicked"
                    android:text="@string/btn_plus"
                    android:textColor="@color/black_grey"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:theme="@style/SettingsButtonsTheme"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horizontalLayout2"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/settings_background"
                android:paddingStart="20dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_grey"
                    android:fontFamily="@font/cynthonext"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@string/tv_start_at" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/settings_btn"
                    android:fontFamily="@font/cynthonextregular"
                    android:text="@string/btn_min_time_default"
                    android:textColor="@color/black_grey"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:theme="@style/SettingsButtonsTheme"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horizontalLayout3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/settings_background"
                android:paddingStart="20dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_grey"
                    android:fontFamily="@font/cynthonext"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@string/tv_end_at" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/settings_btn"
                    android:fontFamily="@font/cynthonextregular"
                    android:text="@string/btn_max_time_default"
                    android:textColor="@color/black_grey"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:theme="@style/SettingsButtonsTheme"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/submit_btn"
                android:fontFamily="@font/cynthonext"
                android:onClick="onBntContinueClicked"
                android:text="@string/btn_continue"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>