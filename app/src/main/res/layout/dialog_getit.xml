<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_popup"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view_swipe_up"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="scroll_up.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tv_explanation_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cynthonext"
        android:gravity="center"
        android:paddingBottom="20sp"
        android:text="@string/popup_explanation" />

    <Button
        android:id="@+id/btn_got_it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_submit"
        android:gravity="center"
        android:text="@string/popup_btn_got_it"
        android:textAllCaps="false" />

</LinearLayout>